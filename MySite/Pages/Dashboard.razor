@inject IJSRuntime JSRuntime

<PageTitle>Dashboard</PageTitle>


<div class="container">
    <div class="row">
        <div class="col">
            <h1 class="text-2xl text-gray-800 font-bold mb-4">
                Dashboard
            </h1>
        </div>
        <div class="col">
            <div id="map" style="width:100% ;height:1000px;"></div>
        </div>
    </div>
</div>

